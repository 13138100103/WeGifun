page {
    background-color: #fff;
}

.blockquote {
    font-size: 16px;

    position: relative;

    margin: 15px;
    margin-right: 15px;
    margin-left: 15px;
    padding: 10px 15px 10px 30px;

    border-left: 5rpx solid #999;
    background-color: #f1f1f1;
}

.blockquote::before {
    font-size: 100rpx;
    font-weight: bold;

    position: absolute;
    top: -20rpx;
    left: 10rpx;

    content: '\201c';

    color: #999;
}

.weui-article__h1 {
    border-bottom: 1px solid #eee;
}

.weui-article__p {
    text-align: justify;
}

.weui-article__section:last-child {
    margin-bottom: 0;
}

.weui-btn-area {
    margin: .3px 15px 1.17647059em;
}
