<view class="weui-cells">
    <view id="jw" class="weui-cell" hover-class="weui-cell_active" bindtap="bindJump">
        <view class="weui-cell__bd">{{text_jw}}</view>
        <view class="weui-cell__ft">{{jw_bind_status}}</view>
    </view>
    <view id="card" class="weui-cell" hover-class="weui-cell_active" bindtap="bindJump">
        <view class="weui-cell__bd">{{text_card}}</view>
        <view class="weui-cell__ft">{{card_bind_status}}</view>
    </view>
</view>
<view class="weui-footer weui-footer_fixed-bottom">
    <view class="weui-footer__text">{{tip}}</view>
</view>