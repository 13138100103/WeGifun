image {
    width: 100%;
    height: 250rpx;

    vertical-align: bottom;
}

view.gratitude text {
    margin-right: 20rpx;
}

.blockquote {
    position: relative;

    margin-right: 15px;
    margin-left: 15px;
    padding: 20px 20px 20px 40px;

    border-left: 5rpx solid #999;
    background-color: #fff;
}

.blockquote::before {
    font-size: 120rpx;
    font-weight: bold;

    position: absolute;
    top: -30rpx;
    left: 20rpx;

    content: '\201c';

    color: #999;
}

.code {
    font-size: 90%;

    margin-right: 4px;
    padding: 2px 4px;

    color: #c7254e;
    border-radius: 4px;
    background-color: #f9f2f4;
}

.weui-article__h3 {
    border-bottom: 1rpx solid #d9d9d9;
}

.weui-article__section:last-child {
    margin-bottom: 0;
}

.weui-footer {
    margin-bottom: .52em;
}

.egg-bubbles {
    position: fixed;
    top: 0;
    left: 0;

    display: none;

    width: 100%;
    height: 100%;
}

.egg-bubbles.display {
    display: block;
}

.egg-bubbles view {
    font-size: 75rpx;
    line-height: 75rpx;

    position: absolute;
    bottom: -200rpx;

    width: 75rpx;
    height: 75rpx;

    animation: square 20s infinite;

    background-color: rgba(57, 58, 62, .15);
}

.egg-bubbles view:nth-child(1) {
    left: 5%;

    animation-delay: 2s;
}

.egg-bubbles view:nth-child(2) {
    left: 15%;

    width: 30rpx;
    height: 30rpx;

    animation-duration: 15s;
}

.egg-bubbles view:nth-child(3) {
    left: 25%;

    animation-duration: 25s;
    animation-delay: 6s;

    background-color: transparent;
}

.egg-bubbles view:nth-child(4) {
    left: 35%;

    width: 180rpx;
    height: 180rpx;

    animation-duration: 25s;
    animation-delay: 4s;

    background-color: rgba(57, 58, 62, .25);
}

.egg-bubbles view:nth-child(5) {
    left: 45%;
}

.egg-bubbles view:nth-child(6) {
    left: 55%;

    width: 110rpx;
    height: 110rpx;

    animation-delay: 6s;

    background-color: rgba(57, 58, 62, .2);
}

.egg-bubbles view:nth-child(7) {
    left: 65%;

    width: 120rpx;
    height: 120rpx;

    animation-duration: 30s;
    animation-delay: 15s;
}

.egg-bubbles view:nth-child(8) {
    font-size: 180rpx;
    line-height: 180rpx;

    left: 75%;

    width: 180rpx;
    height: 180rpx;

    animation-delay: 3s;

    background-color: transparent;
}

.egg-bubbles view:nth-child(9) {
    left: 85%;

    width: 90rpx;
    height: 90rpx;

    animation-duration: 35s;
    animation-delay: 2s;

    background-color: rgba(57, 58, 62, .3);
}

.egg-bubbles view:nth-child(10) {
    left: 95%;

    width: 30rpx;
    height: 30rpx;

    animation-delay: 10s;
}

@keyframes square {
    0% {
        transform: translateY(0) rotate(0);
    }
    100% {
        transform: translateY(-2000rpx) rotate(600deg);
    }
}
