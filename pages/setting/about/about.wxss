image {
    width: 100%;
    height: 250rpx;
    vertical-align: bottom;
}
text {
    margin-right: 10px;
}
.blockquote {
    position: relative;
    background-color: #FFFFFF;
    margin-left: 15px;
    margin-right: 15px;
    padding: 20px 20px 20px 40px;
    border-left: 5rpx solid #999999;
}
.blockquote::before{
    position: absolute;
    left: 10px;
    top: -15px;
    content: "\201c";
    font-size: 60px;
    font-weight: bold;
    color: #999999;
}
.url {
    padding: 2px 4px;
    font-size: 90%;
    color: #C7254E;
    background-color: #F9F2F4;
    border-radius: 4px;
}
.weui-article__h3 {
    border-bottom: 1rpx solid #D9D9D9;
}
.weui-article__section:last-child {
    margin-bottom: 0;
}
.weui-footer {
    margin-bottom: .52em;
}
.egg-bubbles {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}
.egg-bubbles.display {
    display: block;
}
.egg-bubbles view {
    background-color: rgba(57, 58, 62, .15);
    position: absolute;
    width: 75rpx;
    height: 75rpx;
    line-height: 75rpx;
    font-size: 75rpx;
    bottom: -200rpx;
    animation: square 20s infinite;
}
.egg-bubbles view:nth-child(1) {
    left: 5%;
    animation-delay: 2s;
}
.egg-bubbles view:nth-child(2) {
    left: 15%;
    width: 30rpx;
    height: 30rpx;
    animation-duration: 15s;
}
.egg-bubbles view:nth-child(3) {
    background-color: transparent;
    left: 25%;
    animation-delay: 6s;
    animation-duration: 25s;
}
.egg-bubbles view:nth-child(4) {
    background-color: rgba(57, 58, 62, .25);
    left: 35%;
    width: 180rpx;
    height: 180rpx;
    animation-delay: 4s;
    animation-duration: 25s;
}
.egg-bubbles view:nth-child(5) {
    left: 45%;
}
.egg-bubbles view:nth-child(6) {
    background-color: rgba(57, 58, 62, .2);
    left: 55%;
    width: 110rpx;
    height: 110rpx;
    animation-delay: 6s;
}
.egg-bubbles view:nth-child(7) {
    left: 65%;
    width: 120rpx;
    height: 120rpx;
    animation-delay: 15s;
    animation-duration: 30s;
}
.egg-bubbles view:nth-child(8) {
    background-color: transparent;
    left: 75%;
    width: 180rpx;
    height: 180rpx;
    line-height: 180rpx;
    font-size: 180rpx;
    animation-delay: 3s;
}
.egg-bubbles view:nth-child(9) {
    background-color: rgba(57, 58, 62, .3);
    left: 85%;
    width: 90rpx;
    height: 90rpx;
    animation-delay: 2s;
    animation-duration: 35s;
}
.egg-bubbles view:nth-child(10) {
    left: 95%;
    width: 30rpx;
    height: 30rpx;
    animation-delay: 10s;
}
@keyframes square {
    0% {
        transform: translateY(0) rotate(0);
    }
    100% {
        transform: translateY(-2000rpx) rotate(600deg);
    }
}