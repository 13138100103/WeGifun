<form bindsubmit="bindSubmit">
    <view class="weui-cells__title">{{text_content}}</view>
    <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell">
            <view class="weui-cell__bd">
                <textarea name="content" class="weui-textarea" bindinput="bindInput" />
            </view>
        </view>
    </view>
    <view class="weui-cells__title">{{text_contact_way}}</view>
    <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
            <view class="weui-cell__bd">
                <input name="from" class="weui-input" />
            </view>
        </view>
    </view>
    <view class="weui-btn-area">
        <button class="weui-btn" type="primary" disabled="{{btn_disabled}}" formType="submit">{{btn_title}}</button>
    </view>
</form>
<view class="weui-footer weui-footer_fixed-bottom">
    <view class="weui-footer__text">{{tip}}</view>
</view>