.record {
    position: fixed;
    top: 100%;
    left: 0;

    box-sizing: border-box;
    width: 100%;
    min-height: 100vh;
    padding: 15px;

    transition: all .8s cubic-bezier(.68, -.55, .27, 1.55);

    opacity: 0;
    background-color: #fff;
}

.record.show {
    position: absolute;
    top: 0;

    opacity: 1;
}

.record-title {
    display: flex;

    justify-content: space-between;
}

.oo-record {
    padding-top: 0;
    padding-bottom: 0;
}

.oo-record:last-child {
    margin-bottom: 0;
}
