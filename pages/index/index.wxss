@import '/utils/page-after.wxss';

.edge {
    font-size: 26rpx;

    position: relative;

    text-align: center;

    color: #999;
    background-color: #fff;
}

.edge::after,
.curr-week::after {
    position: absolute;

    content: '';
}

.edge.head::after {
    bottom: 0;
    left: 0;

    width: 100%;

    transform-origin: bottom;

    border-bottom: 1rpx solid #d9d9d9;
}

.edge.sidebar::after,
.curr-week::after {
    top: 0;
    right: 0;

    height: 100%;

    transform-origin: right;

    border-right: 1rpx solid #d9d9d9;
}

@media (min-resolution: 2dppx) {
    .edge.head::after {
        transform: scaleY(.5);
    }
    .edge.sidebar::after,
    .curr-week::after {
        transform: scaleX(.5);
    }
}

@media (min-resolution: 3dppx) {
    .edge.head::after {
        transform: scaleY(.333333);
    }
    .edge.sidebar::after,
    .curr-week::after {
        transform: scaleX(.333333);
    }
}

.head {
    position: fixed;
    z-index: 100;

    display: flex;

    width: 100%;
    height: 60rpx;
}

.curr-week {
    position: relative;
}

.curr-week,
.sidebar {
    width: 35rpx;
}

.curr-week text {
    line-height: 30rpx;

    display: block;
}

.week-title {
    display: flex;

    flex: auto;
}

.week-title text {
    line-height: 60rpx;

    flex: auto;
}

.body {
    display: flex;

    padding-top: 60rpx;
}

.sidebar {
    display: flex;
    flex-direction: column;

    padding: 10rpx 0;

    flex: none;
}

.sidebar view {
    display: flex;
    flex-direction: column;

    height: 200rpx;
    margin-bottom: 10rpx;

    justify-content: space-around;
}

.sidebar view:last-child {
    height: 100rpx;
}

.content {
    display: flex;

    padding: 10rpx 0;

    flex: auto;
}

.content .column {
    position: relative;

    display: flex;
    flex-direction: column;

    margin: 0 6rpx;

    flex: auto;
}

.column .course-wrap {
    position: absolute;

    overflow: hidden;

    width: 100%;
}

.course-wrap .course {
    display: flex;
    flex-direction: column;

    box-sizing: border-box;
    height: 200rpx;
    padding: 2rpx;

    text-align: center;

    color: #fff;
    background-color: #b2b2b2;

    justify-content: space-around;
}

.course-wrap text {
    font-size: 28rpx;
    line-height: 32rpx;

    display: -webkit-box;
    overflow: hidden;

    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    /* 多行溢出省略号 http://t.cn/zWUS0VF */
}

.course-hover {
    transition: all .2s ease-in-out;

    opacity: .8;
}
